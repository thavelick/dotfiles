[
    {
        "name": "archlinux updates",
        "command": "sudo pacman -Syu && yay -Syu",
        "interval": "7"
    },
    {
        "name": "prune yay cache",
        "command": "yay -Sc --aur",
        "interval": "31"
    },
    {
        "name": "prune backups",
        "command": "sudo borg prune -v --list --keep-within=89d /backuprepo && sudo borg compact --progress /backuprepo",
        "interval": "37"
    },
    {
        "name": "backups",
        "command": "sudo ~/Projects/dotfiles/backups.zsh",
        "interval": "11"
    }
]
